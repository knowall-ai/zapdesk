# DevDesk Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# NextAuth Configuration
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-hex-32

# =============================================================================
# Azure AD Configuration (Microsoft Authentication)
# =============================================================================
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=common

# =============================================================================
# Azure DevOps Configuration
# =============================================================================
AZURE_DEVOPS_ORG=KnowAll
AZURE_DEVOPS_PAT=your-personal-access-token-for-service-account

# =============================================================================
# Email Configuration (Exchange Online)
# =============================================================================

# Inbound Email Webhook
EMAIL_WEBHOOK_SECRET=your-email-webhook-secret

# Outbound Email (SMTP)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=devdesk@knowall.ai
SMTP_PASSWORD=your-app-password
SMTP_FROM=devdesk@knowall.ai
SMTP_FROM_NAME=DevDesk Support

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=DevDesk
APP_URL=http://localhost:3000
